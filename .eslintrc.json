{
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "rules": {
    "no-console": "warn",
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "parser": "flow"
      },
      {
        "usePrettierrc": false
      }
    ],
    "arrow-body-style": "off",
    "prefer-arrow-callback": "off"
  }
}
